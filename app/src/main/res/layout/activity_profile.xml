<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Activities.Profile">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profileImageHeight"
        android:layout_marginTop="@dimen/profileMarginTop"

        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profileNameMarginTop"
        android:layout_marginBottom="@dimen/profileNameMarginBottom"
        android:paddingLeft="20px"
        android:textAlignment="center"
        android:textColor="@color/userNameColor"
        android:textSize="@dimen/profileNameTxtSize" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:paddingLeft="50px"
        android:text="@string/email"
        android:textColor="@color/attributeColor"
        android:textSize="@dimen/profileAttTxtSize"
        app:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="62px"
        android:textColor="@color/dataViewColor"
        android:textSize="@dimen/profileAttViewTxtSize" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profileAttMarginTop"
        android:paddingLeft="50px"
        android:text="@string/MobileNo"
        android:textColor="@color/attributeColor"
        android:textSize="@dimen/profileAttTxtSize"
        app:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/MobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="62px"
        android:textColor="@color/dataViewColor"
        android:textSize="@dimen/profileAttViewTxtSize" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profileAttMarginTop"
        android:paddingLeft="50px"
        android:text="@string/IdNo"
        android:textColor="@color/attributeColor"
        android:textSize="@dimen/profileAttTxtSize"
        app:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/NIC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="62px"
        android:textColor="@color/dataViewColor"
        android:textSize="@dimen/profileAttViewTxtSize" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profileAttMarginTop"
        android:paddingLeft="50px"
        android:text="@string/address"
        android:textColor="@color/attributeColor"
        android:textSize="@dimen/profileAttTxtSize"
        app:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="62px"
        android:textColor="@color/dataViewColor"
        android:textSize="@dimen/profileAttViewTxtSize" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profileAttMarginTop"
        android:paddingLeft="50px"
        android:text="@string/pwd"
        android:textColor="@color/attributeColor"
        android:textSize="@dimen/profileAttTxtSize"
        app:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="62px"
        android:textColor="@color/dataViewColor"
        android:textSize="@dimen/profileAttViewTxtSize" />

    <Button
        android:id="@+id/mybooking"
        android:layout_width="@dimen/profileBtnHeight"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profileBtnMarginLeft"
        android:layout_marginTop="@dimen/profileBtnMarginTop"
        android:backgroundTint="#21C392"
        android:text="@string/profileBtnBooking"
        android:textSize="@dimen/profileBtnTxtSize"
        android:textStyle="bold"
        app:backgroundTint="@color/MyBookBtn" />

    <Button
        android:id="@+id/Eprofile"
        android:layout_width="@dimen/profileBtnHeight"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profileBtnMarginLeft"
        android:layout_marginTop="@dimen/profileBtnMarginTop"
        android:backgroundTint="#FFFFFF"
        android:text="@string/profileEditBtn"
        android:textColor="@color/editBtnTxtColor"
        android:textSize="@dimen/profileBtnTxtSize"
        android:textStyle="bold"
        app:backgroundTint="@color/editPBtnBackColor" />


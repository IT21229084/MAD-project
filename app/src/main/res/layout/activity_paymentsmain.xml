<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.paymentsmain">

    <Button
        android:id="@+id/list_payment"
        android:layout_width="178dp"
        android:layout_height="84dp"
        android:layout_marginTop="308dp"
        android:backgroundTint="@color/btnColor"
        android:text="My Payments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_payment" />

    <Button
        android:id="@+id/new_payment"
        android:layout_width="171dp"
        android:layout_height="76dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/btnColor"
        android:text="New Payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="366dp"
        android:layout_height="533dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cropped_scooter" />

</androidx.constraintlayout.widget.ConstraintLayout>
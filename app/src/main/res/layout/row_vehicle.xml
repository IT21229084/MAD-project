<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/vehicleRl"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginEnd="5dp"
            android:background="@color/grey03">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/baseline_pedal_bike_24" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vehicleNameTv"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/vehicleRl"
            android:layout_toStartOf="@id/moreBtn"
            android:maxLines="1"
            android:text="Vehicle1"
            android:ellipsize="end"/>

        <ImageButton
            android:id="@+id/moreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_more_black"
            android:padding="5dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/countTv"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicleNameTv"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:layout_toEndOf="@id/vehicleRl"
            android:maxLines="1"
            android:text="Available Count"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>